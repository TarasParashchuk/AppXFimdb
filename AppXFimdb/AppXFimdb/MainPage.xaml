<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppXFimdb.MainPage"
             Title="Каталог товарів">
    <ListView x:Name="ListForCatalog" ItemsSource="{Binding ListFilms, Mode=TwoWay}" SelectedItem="{Binding SelectItemFilm, Mode=TwoWay}" 
              HasUnevenRows="True" CachingStrategy="RecycleElement"
              SelectionMode="None" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell ImageSource="{Binding Cover_url}" Text="{Binding Title}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage>